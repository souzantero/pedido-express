{
  "name": "@pedido-express/server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "format": "prettier --write '*/**/*.ts'",
    "lint": "eslint '*/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig-build.json",
    "start": "NODE_ENV=production node dist/main/server.js",
    "start:dev": "NODE_ENV=development nodemon -L --watch ./src --exec ts-node ./src/main/server.ts",
    "debug": "NODE_ENV=development nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "test:e2e": "NODE_ENV=test ts-node test/e2e/*.test.ts"
  },
  "keywords": [],
  "author": "Antero, Felipe <souzantero@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@pedido-express/core": "^0.0.2",
    "express": "^4.18.2",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
