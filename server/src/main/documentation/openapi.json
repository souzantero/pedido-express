{
  "openapi": "3.1.0",
  "info": {
    "title": "Pedido Express API",
    "description": "API para gerenciamento de pedidos de uma lanchonete",
    "version": "1.0.0",
    "contact": {
      "name": "Felipe Antero",
      "email": "souzantero@gmail.com",
      "url": "https://linkedin.com/in/souzantero"
    }
  },
  "servers": [
    {
      "url": "/api",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "paths": {
    "/orders": {
      "post": {
        "tags": [
          "Orders"
        ],
        "summary": "Cria um novo pedido",
        "operationId": "createOrder",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pedido criado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Lista todos os produtos",
        "operationId": "getProducts",
        "responses": {
          "200": {
            "description": "Produtos encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/product-categories": {
      "get": {
        "tags": [
          "Product Categories"
        ],
        "summary": "Lista todas as categorias de produtos",
        "operationId": "getProductCategories",
        "responses": {
          "200": {
            "description": "Categorias encontradas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductCategory"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Mensagem de erro",
            "example": "Erro ao executar a operação"
          }
        }
      },
      "CreateOrderInput": {
        "type": "object",
        "required": [
          "customerName",
          "isTakeAway",
          "orderProducts"
        ],
        "properties": {
          "customerName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "example": "Felipe Antero",
            "description": "Nome do cliente"
          },
          "isTakeAway": {
            "type": "boolean",
            "example": true,
            "description": "Indica se o pedido é para viagem"
          },
          "orderProducts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "productId",
                "quantity"
              ],
              "properties": {
                "productId": {
                  "type": "string",
                  "format": "uuid",
                  "example": "d290f1ee-6c54-4b01-90e6-d701748f0851",
                  "description": "Identificador único do produto"
                },
                "quantity": {
                  "type": "integer",
                  "format": "int32",
                  "example": 2,
                  "description": "Quantidade do produto"
                },
                "observation": {
                  "type": "string",
                  "minLength": 3,
                  "maxLength": 255,
                  "example": "Sem gelo",
                  "description": "Observação do produto"
                }
              }
            },
            "description": "Produtos do pedido"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Identificador único do pedido"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação do pedido"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de atualização do pedido"
          },
          "code": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "example": "PED-0001",
            "description": "Código do pedido"
          },
          "status": {
            "type": "string",
            "enum": [
              "PENDING",
              "PREPARING",
              "READY",
              "DELIVERED",
              "CANCELED"
            ],
            "example": "PENDING",
            "description": "Status do pedido"
          },
          "isTakeAway": {
            "type": "boolean",
            "example": true,
            "description": "Indica se o pedido é para viagem"
          },
          "customerName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "example": "Felipe Antero",
            "description": "Nome do cliente"
          }
        }
      },
      "OrderProduct": {
        "type": "object",
        "properties": {
          "quantity": {
            "type": "integer",
            "format": "int32",
            "example": 2,
            "description": "Quantidade do produto"
          },
          "observation": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "example": "Sem gelo",
            "description": "Observação do produto"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Identificador único do produto"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação do produto"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de atualização do produto"
          },
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "example": "Coca-Cola",
            "description": "Nome do produto"
          },
          "description": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "example": "Refrigerante de cola",
            "description": "Descrição do produto"
          },
          "price": {
            "type": "number",
            "format": "float",
            "example": 5.5,
            "description": "Preço do produto"
          },
          "displayImageSource": {
            "type": "string",
            "format": "url",
            "example": "https://www.cocacola.com.br/content/dam/GO/CokeZone/Common/Share/Products/COCA-COLA-ORIGINAL-350ML.png",
            "description": "URL da imagem do produto"
          },
          "categoryId": {
            "type": "string",
            "format": "uuid",
            "example": "d290f1ee-6c54-4b01-90e6-d701748f0851",
            "description": "Identificador único da categoria do produto"
          }
        }
      },
      "ProductCategory": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Identificador único da categoria do produto"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação da categoria do produto"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de atualização da categoria do produto"
          },
          "deletedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de exclusão da categoria do produto"
          },
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255,
            "example": "Bebidas",
            "description": "Nome da categoria do produto"
          }
        }
      }
    }
  }
}